<h1> My Tasks </h1>

<ul>
  <% @tasks.each do |task| %>
    <%= true == task.completed ? "[X]" : "[ ]" %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<%= link_to "Add a task", tasks_new_path %>

